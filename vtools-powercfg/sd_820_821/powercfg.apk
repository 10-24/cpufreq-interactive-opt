#!/system/bin/sh
# Project WIPE https://github.com/yc9559/cpufreq-interactive-opt
# Author: yc9559
# Generated at: Fri Apr 20 12:20:58 2018

setenforce 0
action=$1

# $1:value $2:file path
function set_value() {
	if [ ! -f $2 ]; then
		chown 0.0 $2
		chmod 0666 $2
		echo $1 > $2
		chmod 0444 $2
	fi
}

# $1:cpu0 $2:timer_rate $3:value
function set_param() {
	echo $3 > /sys/devices/system/cpu/$1/cpufreq/interactive/$2
}

# disable thermal bcl hotplug to switch governor
echo 0 > /sys/module/msm_thermal/core_control/enabled

# RunOnce
if [ ! -f /project_wipe_runonce ]; then
	# set flag
	touch /project_wipe_runonce

	# Perfd, nothing to worry about, if error the script will continue
	stop perfd
	if [ -f /data/system/perfd/default_values ]; then
		rm /data/system/perfd/default_values
	fi

	# HMP
	set_value 90 /proc/sys/kernel/sched_spill_load
	set_value 0 /proc/sys/kernel/sched_boost
	set_value 1 /proc/sys/kernel/sched_prefer_sync_wakee_to_waker
	set_value 40 /proc/sys/kernel/sched_init_task_load

	# HMP IN SMP STYLE for msm8996
	set_value 30 /proc/sys/kernel/sched_downmigrate
	set_value 45 /proc/sys/kernel/sched_upmigrate

	# THERMAL CONTROL
	echo N > /sys/module/msm_thermal/parameters/enabled

	# INPUT BOOST
	set_value 50 /sys/module/cpu_boost/parameters/input_boost_ms
	set_value 0 /sys/module/msm_performance/parameters/touchboost

	# set min & max frequency
	set_value 280000 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
	set_value 1 /sys/devices/system/cpu/cpu2/online
	set_value 280000 /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq

	# shared interactive parameters
	set_param cpu0 timer_rate 20000
	set_param cpu2 timer_rate 20000
	set_param cpu0 timer_slack 180000
	set_param cpu2 timer_slack 180000
	set_param cpu0 io_is_busy 0
	set_param cpu2 io_is_busy 0
	set_param cpu0 use_sched_load 1
	set_param cpu2 use_sched_load 1
	set_param cpu0 ignore_hispeed_on_notif 0
	set_param cpu2 ignore_hispeed_on_notif 0
fi

# set permission for setting interactive parameters
chown 0.0 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chown 0.0 /sys/devices/system/cpu/cpu2/cpufreq/interactive/*
chmod 0666 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chmod 0666 /sys/devices/system/cpu/cpu2/cpufreq/interactive/*

if [ "$action" = "powersave" ]; then
	echo "0:1280000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "78000 1580000:58000"
	set_param cpu0 hispeed_freq 1280000
	set_param cpu0 go_hispeed_load 97
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "59 380000:38 480000:76 580000:42 780000:86 880000:61 980000:85 1080000:99"
	set_param cpu0 min_sample_time 18000
	set_param cpu2 above_hispeed_delay "18000 1280000:38000 1380000:78000 1780000:138000"
	set_param cpu2 hispeed_freq 1180000
	set_param cpu2 go_hispeed_load 99
	set_param cpu2 boostpulse_duration 18000
	set_param cpu2 target_loads "61 380000:38 480000:76 580000:42 780000:86 880000:61 1080000:99 1180000:90 1280000:81 1480000:92 1580000:99"
	set_param cpu2 min_sample_time 18000
fi

if [ "$action" = "balance" ]; then
	echo "0:1280000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "78000 1580000:38000"
	set_param cpu0 hispeed_freq 1280000
	set_param cpu0 go_hispeed_load 99
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "64 380000:38 480000:74 580000:42 780000:87 880000:61 980000:86 1080000:67 1180000:99"
	set_param cpu0 min_sample_time 18000
	set_param cpu2 above_hispeed_delay "18000 1280000:38000 1380000:78000 1780000:138000"
	set_param cpu2 hispeed_freq 1180000
	set_param cpu2 go_hispeed_load 97
	set_param cpu2 boostpulse_duration 18000
	set_param cpu2 target_loads "33 380000:24 480000:76 580000:42 780000:83 880000:73 980000:77 1080000:51 1180000:97 1280000:68 1380000:84 1480000:92 1580000:99"
	set_param cpu2 min_sample_time 18000
fi

if [ "$action" = "performance" ]; then
	echo "0:1380000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "78000"
	set_param cpu0 hispeed_freq 1380000
	set_param cpu0 go_hispeed_load 99
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "1 380000:21 480000:76 580000:50 680000:30 780000:90 880000:52 980000:80 1080000:54 1280000:99"
	set_param cpu0 min_sample_time 18000
	set_param cpu2 above_hispeed_delay "78000 1780000:38000"
	set_param cpu2 hispeed_freq 1580000
	set_param cpu2 go_hispeed_load 98
	set_param cpu2 boostpulse_duration 18000
	set_param cpu2 target_loads "1 380000:21 480000:76 580000:48 680000:30 780000:92 880000:46 980000:62 1080000:45 1180000:68 1280000:73 1480000:99"
	set_param cpu2 min_sample_time 18000
fi

if [ "$action" = "fast" ]; then
	# nothing
fi

# set permission to avoid being modified
chmod 0444 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chmod 0444 /sys/devices/system/cpu/cpu2/cpufreq/interactive/*

# re-enable thermal bcl hotplug to switch governor
echo 1 > /sys/module/msm_thermal/core_control/enabled

exit 0