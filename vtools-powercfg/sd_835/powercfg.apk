#!/system/bin/sh
# Project WIPE https://github.com/yc9559/cpufreq-interactive-opt
# Author: yc9559
# Generated at: Thu Apr 19 01:44:05 2018

setenforce 0
action=$1

# $1:value $2:file path
function set_value() {
	chown 0.0 $2
	chmod 0666 $2
	echo $1 > $2
	chmod 0444 $2
}

# $1:cpu0 $2:timer_rate $3:value
function set_param() {
	echo $3 > /sys/devices/system/cpu/$1/cpufreq/interactive/$2
}

# disable thermal bcl hotplug to switch governor
echo 0 > /sys/module/msm_thermal/core_control/enabled

# RunOnce
if [ ! -f /project_wipe_runonce ]; then
	# set flag
	touch /project_wipe_runonce

	# Perfd, nothing to worry about, if error the script will continue
	stop perfd
	if [ -f /data/system/perfd/default_values ]; then
		rm /data/system/perfd/default_values
	fi

	# HMP
	set_value 90 /proc/sys/kernel/sched_spill_load
	set_value 0 /proc/sys/kernel/sched_boost
	set_value 1 /proc/sys/kernel/sched_prefer_sync_wakee_to_waker
	set_value 40 /proc/sys/kernel/sched_init_task_load

	# THERMAL CONTROL
	echo N > /sys/module/msm_thermal/parameters/enabled

	# INPUT BOOST
	echo 50 > /sys/module/cpu_boost/parameters/input_boost_ms

	# set min & max frequency
	set_value 280000 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
	set_value 1 /sys/devices/system/cpu/cpu4/online
	set_value 280000 /sys/devices/system/cpu/cpu4/cpufreq/scaling_min_freq

	# shared interactive parameters
	set_param cpu0 timer_rate 20000
	set_param cpu4 timer_rate 20000
	set_param cpu0 timer_slack 180000
	set_param cpu4 timer_slack 180000
	set_param cpu0 io_is_busy 0
	set_param cpu4 io_is_busy 0
	set_param cpu0 ignore_hispeed_on_notif 0
	set_param cpu4 ignore_hispeed_on_notif 0
fi

# set permission for setting interactive parameters
chown 0.0 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chown 0.0 /sys/devices/system/cpu/cpu4/cpufreq/interactive/*
chmod 0666 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chmod 0666 /sys/devices/system/cpu/cpu4/cpufreq/interactive/*

if [ "$action" = "powersave" ]; then
	echo "0:1080000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "18000 1280000:58000 1380000:78000 1480000:38000 1580000:58000 1680000:78000"
	set_param cpu0 hispeed_freq 1080000
	set_param cpu0 go_hispeed_load 99
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "1 380000:54 480000:74 580000:27 680000:72 780000:56 880000:90 980000:99 1080000:79 1180000:99 1280000:89 1380000:77 1480000:99 1580000:75 1680000:98"
	set_param cpu0 min_sample_time 18000
	set_param cpu4 above_hispeed_delay "18000 1280000:38000 1480000:58000 1580000:78000 1780000:138000"
	set_param cpu4 hispeed_freq 1080000
	set_param cpu4 go_hispeed_load 99
	set_param cpu4 boostpulse_duration 18000
	set_param cpu4 target_loads "55 380000:40 480000:70 580000:50 680000:84 780000:75 880000:97 1080000:77 1180000:82 1280000:92 1380000:98 1480000:56 1580000:98"
	set_param cpu4 min_sample_time 18000
fi

if [ "$action" = "balance" ]; then
	echo "0:1080000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "18000 1280000:38000 1380000:78000 1480000:38000 1580000:78000"
	set_param cpu0 hispeed_freq 1080000
	set_param cpu0 go_hispeed_load 98
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "1 380000:54 480000:77 580000:35 680000:72 780000:52 880000:99 980000:75 1080000:79 1180000:87 1380000:77 1480000:98 1580000:75 1680000:98"
	set_param cpu0 min_sample_time 18000
	set_param cpu4 above_hispeed_delay "18000 1280000:38000 1480000:18000 1580000:78000 1780000:138000"
	set_param cpu4 hispeed_freq 1080000
	set_param cpu4 go_hispeed_load 99
	set_param cpu4 boostpulse_duration 18000
	set_param cpu4 target_loads "56 380000:32 480000:68 580000:50 680000:84 780000:60 980000:99 1080000:77 1180000:82 1280000:88 1380000:99 1480000:69 1580000:99"
	set_param cpu4 min_sample_time 18000
fi

if [ "$action" = "performance" ]; then
	echo "0:1180000 2:0" > /sys/module/cpu_boost/parameters/input_boost_freq
	set_param cpu0 above_hispeed_delay "18000 1280000:38000 1480000:18000 1580000:78000"
	set_param cpu0 hispeed_freq 1180000
	set_param cpu0 go_hispeed_load 97
	set_param cpu0 boostpulse_duration 18000
	set_param cpu0 target_loads "1 380000:54 580000:20 780000:61 880000:46 980000:79 1080000:65 1180000:88 1280000:67 1380000:50 1480000:99 1580000:88 1680000:99"
	set_param cpu0 min_sample_time 18000
	set_param cpu4 above_hispeed_delay "18000 1580000:78000 1780000:38000"
	set_param cpu4 hispeed_freq 1280000
	set_param cpu4 go_hispeed_load 99
	set_param cpu4 boostpulse_duration 18000
	set_param cpu4 target_loads "1 380000:20 480000:68 580000:51 680000:30 780000:81 980000:18 1080000:72 1180000:67 1280000:94 1380000:86 1480000:77 1580000:99 1780000:92"
	set_param cpu4 min_sample_time 18000
fi

if [ "$action" = "fast" ]; then
	# nothing
fi

# set permission to avoid being modified
chmod 0444 /sys/devices/system/cpu/cpu0/cpufreq/interactive/*
chmod 0444 /sys/devices/system/cpu/cpu4/cpufreq/interactive/*

# re-enable thermal bcl hotplug to switch governor
echo 1 > /sys/module/msm_thermal/core_control/enabled

exit 0